@prefix lv2:    <http://lv2plug.in/ns/lv2core#>.
@prefix atom:   <http://lv2plug.in/ns/ext/atom#> .
@prefix doap:   <http://usefulinc.com/ns/doap#>.
@prefix rdf:    <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#>.
@prefix ui:     <http://lv2plug.in/ns/extensions/ui#> .
@prefix work:   <http://lv2plug.in/ns/ext/worker#> .
@prefix urid:   <http://lv2plug.in/ns/ext/urid#> .
@prefix midi:   <http://lv2plug.in/ns/ext/midi#> .
@prefix state:   <http://lv2plug.in/ns/ext/state#> .

<http://kushview.net/ns/ksp1>
    a lv2:Plugin, lv2:InstrumentPlugin ;
    doap:name "KSP1" ;
    doap:license <http://usefulinc.com/doap/licenses/gpl> ;
    ui:ui <http://kushview.net/ns/ksp1/gui> ;
    lv2:requiredFeature urid:map, work:schedule ;
    lv2:extensionData state:interface, work:interface ;
    lv2:port [
        a atom:AtomPort, lv2:InputPort ;
        lv2:index 0;
        lv2:symbol "control";
        lv2:name "Control";
        atom:bufferType atom:Sequence ;
        atom:supports midi:MidiEvent ;
    ] , [
        a atom:AtomPort, lv2:OutputPort ;
        lv2:index 1;
        lv2:symbol "notify";
        lv2:name "Notify";
        atom:bufferType atom:Sequence ;
        atom:supports midi:MidiEvent ;
    ] , [
        a lv2:AudioPort, lv2:OutputPort ;
        lv2:index 2 ;
        lv2:symbol "main_left" ;
        lv2:name "Main Left" ;
    ] , [
        a lv2:AudioPort, lv2:OutputPort ;
        lv2:index 3 ;
        lv2:symbol "main_right" ;
        lv2:name "Main Right" ;
    ] .

<http://kushview.net/ns/ksp1/gui>
    a ui:X11UI ;
    lv2:requiredFeature urid:map, ui:peakProtocol ;
    ui:portNotification [
        ui:plugin <http://kushview.net/ns/ksp1> ;
        lv2:symbol "notify" ;
        ui:notifyType atom:Blank, atom:Float ;
    ], [
        ui:plugin <http://kushview.net/ns/ksp1> ;
        lv2:symbol "main_left" ;
        ui:protocol ui:peakProtocol ;
        ui:notifyType ui:peakProtocol ;
    ].
